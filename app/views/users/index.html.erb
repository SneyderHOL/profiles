<h1>Profiles List</h1>
<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Username</th>
      <th>Name</th>
      <th>Description</th>
      <th>Social Media</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if user.image.attached? %>
          <td><%= image_tag user.image.variant(resize_to_limit: [100, 100]) %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.description %></td>
        <td><%= user.social_media(user.socials) %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Profile", new_user_path %>