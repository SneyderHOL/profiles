<h1>Show Profile</h1>

<div>
  <% if @user.image.attached? %>
    <div class="mb-3">
      <%= link_to image_tag(@user.image.variant(resize_to_limit: [400, 400])), @user.image, target: "_blank" %>
    </div>
  <% end %>
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" id="username" class="form-control", value="<%= @user.username %>">
  </div>
  <div class="mb-3">
    <label for="firstname" class="form-label">First Name</label>
    <input type="text" id="firstname" class="form-control", value="<%= @user.name %>">
  </div>
  <% if @user.description %>
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <input type="text" id="description" class="form-control", value="<%= @user.description %>">
    </div>
  <% end %>
  <% unless @user.socials.empty? %>
    <div class="mb-3">Social Media
      <% @user.socials.each do |social| %>
        <div class="mb-3">
          <label for="social_name<%= social.id %>" class="form-label">Name</label>
          <input type="text" id="social_name<%= social.id %>" class="form-control", value="<%= social.name %>">
        </div>
        <div class="mb-3">
          <label for="social_link<%= social.id %>" class="form-label">Link</label>
          <input type="text" id="social_link<%= social.id %>" class="form-control", value="<%= social.link %>">
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Edit", edit_user_path(@user) %>
</div>
<div>
  <%= link_to "Destroy", user_path(@user), method: :delete, data: { confirm: "are you sure?" } %>
</div>