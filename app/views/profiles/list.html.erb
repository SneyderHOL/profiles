<h1>Profiles List</h1>
<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= "#{user.firstname} #{user.lastname}" %></td>
        <td><%= link_to 'Show', list_path %></td>
        <td><%= link_to 'Edit', list_path %></td>
        <td><%= link_to 'Destroy', list_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>